<Window 
        x:Class="WPFPrimes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prime Numbers" 
        Width="1024"
        Height="768" 
        ResizeMode="NoResize">    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="70*" />
            <RowDefinition Height="10*" />          
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="LblTitle" Style="{StaticResource WindowTitleStyle}" Content="Prime Numbers"></Label>

        <Grid Grid.Row="1" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="20*" />
            </Grid.ColumnDefinitions>
            
            <Button  Grid.Column="0" Name="BtnLanguageEnglish" Width="150" Height="50" Content="English"></Button>
            <Button  Grid.Column="1" Name="BtnLanguageFrench" Width="150" Height="50" Content="Français"></Button>
            <Button  Grid.Column="2" Name="BtnLanguagePortuguese" Width="150" Height="50" Content="Português"></Button>
            <Button  Grid.Column="3" Name="BtnLanguageGerman" Width="150" Height="50" Content="Deustch"></Button>
            <Button  Grid.Column="4" Name="BtnLanguageJapanese" Width="150" Height="50" Content="Nihon"></Button>
        </Grid>

        <Label   Grid.Row="2" Name="LblLstTitle"  Style="{StaticResource ListBoxTitleStyle}" Margin="30,0,0,0" Content="List With Content:"></Label>
        <ListBox Grid.Row="3" Name="LstPrimes" Margin="35,0,35,10"></ListBox>

        <Grid Grid.Row="4" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />         
            </Grid.ColumnDefinitions>
            <Button  Grid.Column="0" Name="BtnGeneratePrimes" Width="300" Height="50" Margin="10,0,10,10" Content="Generate Primes"></Button>
            <Button  Grid.Column="1" Name="BtnClearListPrimes" Width="300" Height="50" Margin="10,0,10,10" Content="Clear List"></Button>
         </Grid>
        
    </Grid>
</Window>
